extends include/_layout
block meta
  - meta = {}
  - meta.title = ''
  - meta.keywords = ''
  - meta.description = ''
  - meta.url = ''
  - meta.img = ''
block config
  - config = {}
  - config.path = './'
  - config.hash = Math.floor(Math.random() * (9999999 - 1000000)) + 1000000;
block css
  link(rel="stylesheet" href!=config.path + "assets/css/style.css?hash=" + config.hash)
block js
  | <script src="https://aframe.io/releases/0.8.0/aframe.min.js"></script>
  | <script src="https://jeromeetienne.github.io/AR.js/aframe/build/aframe-ar.js"></script>
  script(src!=config.path + "assets/js/bundle.js?hash=" + config.hash)
block content
  a-scene(embedded arjs="debugUIEnabled:false;" vr-mode-ui="enabled:false;")
    a-asset
      a-asset-item#modelObj(src!=config.path + "assets/obj/Dolphin.obj")
      a-asset-item#modelMtl(src!=config.path + "assets/mtl/Dolphin.mtl")
    a-marker(preset="hiro")
      a-obj-model#model(src="modelObj" mtl="modelMtl" position="0 0 0" scale="0.5 0.5 0.5" rotation="0 0 0")
    a-entity(camera)
  //- a-scene(embedded arjs)
    a-marker(preset="hiro")
      a-sphere(scale=".25 .25 .25" position="0 .5 0" color="#00bfa5")
        a-animation(attribute="position" to="0 1 0" direction="alternate" dur="2000" repeat="indefinite")
    a-entity(camera)
